  <style shim-shadowdom>

    body {
      font-family: sans-serif;
    }

    core-toolbar {
      background-color: #BFBFBF;
      position: relative;
      margin: 0 0 10px 0;
    }
    core-toolbar paper-progress::shadow #activeProgress {
      background-color: #F2F1F1;
    }
    core-toolbar paper-progress::shadow #progressContainer {
      background-color: #BFBFBF;
    }

    #bg {
      z-index: 0;
      position: fixed;
      top: -50%;
      left:-50%;
      width:200%;
      height:200%;
    }
    #bg img {
      z-index: 0;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;
      width:100%;
    }

    .daytime {
      position: absolute;
      left: -8px;
      bottom: -1px;
      width: 100%;
    }
  </style>
  <div id="bg" >
    <img src="/assets/bg-img/bg1.png" alt="">
  </div>
  <paper-toast id="googleAPI" text="Google API has been activated!"></paper-toast>
  <paper-toast id="googleAPIerror" text="An error occured while activating the Google API!"></paper-toast>

<paper-shadow>
  <core-toolbar class="paper-shadow-bottom-z-2">
  <!--<core-icon-button icon="menu" on-tap="{{menuAction}}"></core-icon-button>-->
    <div flex>CarpeDiem</div>

    {{#link-to "event.new"}}<core-icon-button icon="add"></core-icon-button>{{/link-to}}
    <core-icon-button icon="input" on-tap="{{logout}}"></core-icon-button>
    <paper-progress value="{{day-progress true}}" class="daytime"></paper-progress>
  </core-toolbar>
</paper-shadow>

<div style="height: 100%;">
{{outlet}}
</div>
