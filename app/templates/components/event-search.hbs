
{{#each sortedEvents as |event|}}
  {{#click-events "showmore" event }}
    <paper-item style="postion: absolute">
      <div style="float:left; margin-right: 10px">
        <i style="font-size: small;">{{date-name event.start "timestring"}}</i>
        {{#if event.end }}<i style="font-size: small;"><br />{{date-name event.end "timestring"}}</i>
        {{else}}
          {{#if event.end }}<i style="font-size: small;">  {{event.duration}}</i>{{/if}}
        {{/if}}
      </div>

      <core-tooltip label='{{event.location.name}}' position="top" style="z-index: 50; font-color:#3C8D2F; ">
        <div style="float: right">
          <b style="margin-right: 25px">{{event.title}}</b><br />
        </div>
      </core-tooltip>
      <div style="position:absolute; float:right; margin: 5px; marvin-right: 10px; right:0">
        {{#if (ifIs event.type 1)}}
          <core-tooltip label='Task' position="left">
            <core-image  src="/assets/icons/ic_assignment_turned_in_black_24px.svg" class="icons"></core-image>
          </core-tooltip>
        {{/if}}
        {{#if (ifIs event.type 2)}}
          <core-tooltip label='Open End' position="left">
            <core-image  src="/assets/icons/ic_timelapse_black_24px.svg" class="icons"></core-image>
          </core-tooltip>
        {{/if}}
        {{#if (ifIs event.type 3)}}
          <core-tooltip label='On Standby' position="left">
            <core-image  src="/assets/icons/ic_hearing_black_24px.svg" class="icons"></core-image>
          </core-tooltip>
        {{/if}}
        {{#if event.sameMeta}}
          <core-tooltip label='Same searched Meta' position="bottom">
            <core-image  style="min-width: 24px;" src="/assets/icons/ic_compare_arrows_green_24px.svg" class="icons"></core-image>
          </core-tooltip>
        {{/if}}
        {{#if event.sameSelectedLocation}}
          <core-tooltip label='Same Location' position="bottom">
            <core-image  style="min-width: 24px;" src="/assets/icons/ic_location_on_green_24px.svg" class="icons"></core-image>
          </core-tooltip>
        {{else}}{{#if event.nearBy}}
          <core-tooltip label='Same Location' position="bottom">
            <core-image  style="min-width: 24px;" src="/assets/icons/ic_location_on_green_24px.svg" class="icons"></core-image>
          </core-tooltip>{{/if}}
        {{/if}}
      </div>
    </paper-item>
  {{/click-events}}
    <core-collapse id="collapse-event-{{event.id}}">
        <paper-item {{action "fillFormEvent" event}}>
          {{event.description}}
        </paper-item>
    </core-collapse>
{{/each}}
